<%= simple_nested_form_for @course, :html => { :class => 'form-horizontal' } do |course_form| %>
<% if @course.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@course.errors.count, "error") %> prohibited this klass from being saved:</h2>

      <ul>
          <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="row">
      <div class="span7">
        <fieldset>
            <%= render :partial => "course_fields", :locals => { :f => course_form } %>
        <div>
            <%= course_form.simple_fields_for :klass do |klass_form| %>
                <%= render :partial => "klass_fields", :locals => { :f => klass_form } %>
              <% end %> 
        </fieldset>
        </div> 
      </div>
    </div>
    <div class="form-actions">
        <%= course_form.submit nil, :class => 'btn submit radius' %>
        <%= link_to 'Cancel', home_path, :class => 'button secondary' %>
    </div>
  <% end %>