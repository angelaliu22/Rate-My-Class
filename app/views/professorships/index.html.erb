<p id="notice"><%= notice %></p>

<h1>Listing Professorships</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professorships.each do |professorship| %>
      <tr>
        <td><%= professorship.start_date %></td>
        <td><%= professorship.end_date %></td>
        <td><%= link_to 'Show', professorship %></td>
        <td><%= link_to 'Edit', edit_professorship_path(professorship) %></td>
        <td><%= link_to 'Destroy', professorship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

